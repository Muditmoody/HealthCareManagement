<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="../views/css/StyleSheet.css">

<h1>Patients</h1>

<div>
    <h4>Patient</h4>

    <table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="th-lg ver1">@Html.DisplayNameFor(model => model.PatientName)</th>
            <th scope="col" class="th-lg ver1">DateOfBirth</th>
            <th scope="col" class="th-lg ver1">Gender</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var m in Model)
        {
            <tr scope="row" @*@onclick="() => m.IsRowExpanded = !m.IsRowExpanded"*@>
                <td>@m.PatientName</td>
                <td>@m.DateOfBirth</td>
                <td>@m.Gender</td>
            </tr>
            @*if (forecast.IsRowExpanded)
            {
                <tr>@forecast.ExpandableContent</tr>
            }*@
        }
    </tbody>
</table>


    <hr />
    @foreach(var m in Model)
    {
    <dl class="row">
        <dt class = "col-sm-2">
            @nameof(m.PatientId)
        </dt>
        <dd class = "col-sm-10">
            @( m.PatientId)
        </dd>
        <dt class = "col-sm-2">
            @nameof(m.PatientName)
        </dt>
        <dd class = "col-sm-10">
            @( m.PatientName)
        </dd>
        <dt class = "col-sm-2">
            @nameof(m.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @( m.DateOfBirth)
        </dd>
    </dl>
    }
</div>
